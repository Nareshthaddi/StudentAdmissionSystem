@page
@model StudentRazor.Pages.SuccessModel
@{
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #6dd5ed, #2193b0);
        min-height: 100vh;
        margin: 0;
    }

    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 50px;
    }

    .card {
        width: 450px;
        background: #ffffffee;
        padding: 25px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .title {
        color: #0d6efd;
        font-size: 30px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    label {
        font-weight: bold;
        color: #333;
        display: block;
        margin-top: 10px;
    }

    p {
        font-size: 16px;
        color: #444;
        margin: 0;
    }

    .btn {
        margin-bottom: 15px;
    }
</style>


<div class="center-container">
    <div class="card">

        <h1 class="title">Student Submitted Successfully 🎉</h1>

        <p>@TempData["sucessmessage"]</p>

        <a class="btn btn-primary w-100" asp-page="/Create">Submit Another Response</a>

        <hr />

        <label>Name:</label>
        <p>@TempData["fullname"]</p>

        <label>Course:</label>
        <p>@TempData["Course"]</p>

        <label>Date of Birth:</label>
        <p>@TempData["Dateofbirth"]</p>

        <label>Email:</label>
        <p>@TempData["email"]</p>

        <label>Address:</label>
        <p>@TempData["address"]</p>
    </div>
</div>
